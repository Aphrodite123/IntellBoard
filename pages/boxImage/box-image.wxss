@import "../dialog/index.wxss";

.root {
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.image {
  width: 85%;
}

.image-normal {
  height: 80%;
}

.image-hidden {
  height: 0rpx;
}

.visibility-hidden {
  display: none;
}

.display-flex {
  display: flex;
}

.upper-image {
  display: flex;
  position: absolute;
  width: 550rpx;
  height: 900rpx;
}

.image-root {
  position: relative;
  width: 550rpx;
  height: 900rpx;
  margin-top: 20rpx;
}