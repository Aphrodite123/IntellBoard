.top {
  position: absolute;
  width: 100%;
  top: 10rpx;
  display: flex;
  flex-flow: wrap;
  z-index: 10;
  color: white;
  justify-content: space-around;
}

.hint {
  position: absolute;
  top: 10rpx;
  width: 100%;
  font-size: 33rpx;
  text-align: center;
  color: white;
  z-index: 10;
}

page {
  background: rgb(14, 13, 13);
}

view {
  font-size: 30rpx;
}

.bottomContainer {
  flex-direction: column;
  position: absolute;
  width: 100%;
  display: flex;
  z-index: 10;
  justify-content: space-between;
  align-items: center;
  bottom: 15rpx;
}

.bottomContainerOfIPx {
  flex-direction: column;
  position: absolute;
  width: 100%;
  display: flex;
  z-index: 10;
  justify-content: space-between;
  align-items: center;
  bottom: 34px;
}

.bottom {
  flex-direction: row;
  position: absolute;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  bottom: 15rpx;
}

.textButton {
  flex-grow: 1;
  color: white;
  font-size: 4vw;
  display: flex;
  justify-content: center;
  align-items: center;
}

.horizontalLine {
  background: #343434;
  width: 100%;
  height: 0.5rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  bottom: 90rpx;
  position: absolute;
}

.verticalLine {
  background: #343434;
  width: 0.5rpx;
  height: 45rpx;
}

.input {
  display: flex;
  height: 50rpx;
  width: 50%;
}

.input>.label {
  min-width: 150rpx;
  font-size: 30rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.input>input {
  margin-left: 10rpx;
  text-align: center;
  max-width: 160rpx;
  border: 1px solid rgb(255, 255, 255);
  height: 50rpx;
  line-height: 50rpx;
  min-height: 50rpx;
  box-sizing: border-box;
}
